{
  "name": "iinterview-server",
  "version": "1.0.0",
  "description": "Server for iInterview",
  "main": "lib/index.js",
  "author": "rishabh3112",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build:ts": "tsc",
    "build:css": "postcss public/tailwind.css -o public/style.css",
    "build": "yarn build:ts && yarn build:css",
    "serve": "node .",
    "start:ts": "yarn build:ts && yarn serve",
    "start": "yarn serve",
    "watch": "nodemon --exec 'clear && yarn build:ts && yarn serve' -e ts,html",
    "watch:ts": "nodemon --exec 'clear && yarn start:ts' -e ts",
    "watch:html": "nodemon --exec 'clear && yarn build:css && yarn serve' -e html"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^13.9.1",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/sequelize": "^4.28.8",
    "@types/validator": "^12.0.1",
    "cssnano": "^4.1.10",
    "loglevel": "^1.6.7",
    "nodemon": "^2.0.2",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.2.0",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/nunjucks": "^3.1.3",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "collaborative-filter": "^1.0.0-beta.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "nunjucks": "^3.2.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0"
  }
}
